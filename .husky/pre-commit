branch="$(git rev-parse --abbrev-ref HEAD)"

RED=$(tput setaf 1)
RESET=$(tput sgr0)
notAllowedBranchMessage="‚ùå ${RED}You can't commit to '$branch' branch!${RESET}"

GREEN=$(tput setaf 2)
successfullyMessage="${GREEN}You've successfully committed${RESET} üöÄ!"

case "$branch" in
  production)
    echo "$notAllowedBranchMessage"
    exit 1
    ;;
  development)
    echo "$notAllowedBranchMessage"
    exit 1
    ;;
esac

echo "${GREEN}$successfullyMessage${RESET}"
