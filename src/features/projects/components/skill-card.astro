---
type SkillCard = {
  title: string;
  description: string;
};

type Props = SkillCard;

const { title, description } = Astro.props;
---

<div class="flex flex-col gap-2">
  <h3 class="text-primary text-sm font-medium lg:text-base">{title}</h3>
  <p class="text-secondary text-sm leading-relaxed text-balance lg:text-base">
    {description}
  </p>
</div>
