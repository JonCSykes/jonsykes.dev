---
type Props = {
  title: string;
  description: string;
  customClass?: string;
  descriptionClass?: string;
};

const { title, description, customClass, descriptionClass } = Astro.props;
---

<header class={customClass}>
  <h1
    class="text-primary text-3xl leading-tight font-semibold text-balance lg:text-4xl"
  >
    {title}
  </h1>
  <h2
    class:list={[
      "text-secondary mt-3 max-w-[384px] text-sm leading-relaxed text-balance lg:text-base",
      descriptionClass,
    ]}
  >
    {description}
  </h2>
</header>
