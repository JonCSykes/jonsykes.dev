---
import Github from "lucide-astro/Github";
import Linkedin from "lucide-astro/Linkedin";
import Mail from "lucide-astro/Mail";
import Twitter from "lucide-astro/Twitter";

import { SOCIALS } from "@src/constants/socials";

const ICONS = {
  Linkedin,
  Twitter,
  Mail,
  Github,
};
---

<footer
  class="text-secondary flex h-[88px] items-center justify-center gap-8 rounded-2xl py-8"
>
  {
    SOCIALS.map(({ NAME, HREF, ICON, LABEL }) => {
      const Icon = ICONS[ICON];
      const label = LABEL ?? NAME;

      return (
        <a
          href={HREF}
          target="_blank"
          rel="noreferrer"
          aria-label={label}
          class="hover:text-primary relative flex items-center gap-2 text-sm transition-colors lg:text-base"
        >
          <Icon class="h-4 w-4" aria-hidden="true" />
          <span>{label}</span>
        </a>
      );
    })
  }
</footer>
